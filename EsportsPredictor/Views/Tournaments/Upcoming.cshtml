@model List<Tournament>

<h1>Upcoming Tournaments</h1>

@if(Model.Count == 0)
{
	<p>No upcoming tournaments found</p>
}
else
{
	<table class="table table-hover">
		<tr>
			<th>Tournament</th>
			<th>Start Date</th>
			<th>End Date</th>
			<th>Tier</th>
		</tr>
		@foreach(var t in Model)
		{
			<tr class="table-light">
				<td>@t.League.Name @t.Name</td>
				<td>@t.GetLocalBeginAtString()</td>
				<td>@t.GetLocalEndAtString()</td>
				<td>@t.Tier.ToUpper()</td>
				<td><a class="text-info" href="/tournaments/@t.Slug/matches">View Matches</a></td>
			</tr>
		}
	</table>
}
