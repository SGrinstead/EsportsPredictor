@model List<Tournament>

<h1>Upcoming Tournaments</h1>

@if(Model.Count == 0)
{
	<p>No upcoming tournaments found</p>
}
else
{
	<table>
		<tr>
			<th>Tournament</th>
			<th>Start Date</th>
			<th>End Date</th>
		</tr>
		@foreach(var t in Model)
		{
			<tr>
				<td>@t.League.Name @t.Name</td>
				<td>@t.BeginAt</td>
				<td>@t.EndAt</td>
				<td><a href="/tournaments/@t.Slug/matches">View Matches</a></td>
			</tr>
		}
	</table>
}
