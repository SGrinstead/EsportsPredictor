@model List<Match>

<br />
<h1 class="text-center">Matches</h1>
<br />

@if (Model.Count == 0)
{
	<strong class="text-center">No matches found</strong>
}
else
{
	<table class="table table-hover">
		<tr>
			<th>Match</th>
			<th>Start Date</th>
			<th>Type</th>
			<th>Status</th>
		</tr>
		@foreach (var match in Model)
		{
			<tr class="table-light">
				<td>@match.Name</td>
				<td>@match.GetLocalBeginAtString()</td>
				<td>@match.Match_type.Replace("_", " ")</td>
				<td>@match.Status.Replace("_", " ")</td>
				@if (!match.Name.Contains("TBD vs TBD"))
				{
					<td><a class="text-info" href="/matches/@match.Slug">Match Details</a></td>
				}
			</tr>
		}
	</table>
}