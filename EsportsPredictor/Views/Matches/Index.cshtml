@model List<Match>

<h1>Matches</h1>

@if (Model.Count == 0)
{
	<p>No matches found</p>
}
else
{
	<table class="table table-hover">
		<tr>
			<th>Match</th>
			<th>Start Date</th>
			<th>Type</th>
			<th>Status</th>
		</tr>
		@foreach (var match in Model)
		{
			<tr class="table-light">
				<td>@match.Name</td>
				<td>@match.GetLocalBeginAtString()</td>
				<td>@match.Match_type</td>
				<td>@match.Status</td>
				@if (!match.Name.Contains("TBD vs TBD"))
				{
					<td><a class="text-info" href="/matches/@match.Slug">Match Details</a></td>
				}
			</tr>
		}
	</table>
}